generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Material {
  WHITE_FABRIC   // Index 0
  GREY_FABRIC   // Index 1
  BLACK_FABRIC    // Index 2
}

model User {
  id            Int       @id @default(autoincrement())
  auth0Id       String    @unique 
  email         String?   @unique
  hoodieDesigns Hoodie[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Hoodie {
  id                Int      @id @default(autoincrement())
  user              User     @relation(fields: [userId], references: [id])
  color             String
  userId            Int
  torsoFront        Material
  torsoBack         Material
  torsoBand         Material
  leftSleeve        Material
  rightSleeve       Material
  leftCuff          Material
  rightCuff         Material
  hood              Material
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}