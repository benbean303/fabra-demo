generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Material {
  BLACK_FABRIC   // Index 0
  WHITE_FABRIC   // Index 1
  GREY_FABRIC    // Index 2
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  hoodies   Hoodie[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Hoodie {
  id                Int      @id @default(autoincrement())
  user              User     @relation(fields: [userId], references: [id])
  userId            Int
  name              String
  torsoFront        Material
  torsoBack         Material
  torsoBand         Material
  torsoPocket       Material
  armsLeftSleeve    Material
  armsLeftCuff      Material
  armsRightSleeve   Material
  armsRightCuff     Material
  hood              Material
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}